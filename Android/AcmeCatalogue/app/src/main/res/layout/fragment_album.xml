<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_album">

    <ProgressBar
        android:layout_width="wrap_content"
        style="?android:attr/progressBarStyleInverse"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_album"
        android:progressDrawable="@drawable/circle_progress_bar"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true" />
    <ListView
        android:id="@+id/list_album"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="aucun album dans ce produit"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:id="@+id/emptyMessage"
        android:layout_alignBottom="@+id/progressBar_album"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/progressBar_album"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>