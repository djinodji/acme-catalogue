
{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Login
{% endblock title %}

{% block top %}
<section id="home">
<div class="login">
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post" class="form-signin">

        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <h2 class="form-signin-heading">Connectez vous </h2>
        <label for="username" class="sr-only">Email address</label>
        <input type="text" id="username" value="admin" name="_username" class="form-control" placeholder="username" required="true" autofocus="">
        <label for="password" class="sr-only">Password</label>
        <input type="password" value="adminpass" id="password" name="_password"  class="form-control" placeholder="Password" required="true">
        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </div>
        <div class="col-lg-4"></div>
    </form>
</div>


</section>
    <!--/#home-->
{% endblock top %}