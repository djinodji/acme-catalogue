{% extends 'base.html.twig' %}

{% block body %}
    <h1>History</h1>

    <table>
        <tbody>
            <tr>
                <th>Date</th>
                <td>{% if history.date %}{{ history.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ history.statut }}</td>
            </tr>
            <tr>
                <th>Actiontype</th>
                <td>{{ history.actionType }}</td>
            </tr>
            <tr>
                <th>Isuserdestination</th>
                <td>{% if history.isuserdestination %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ history.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('history_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('history_edit', { 'id': history.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
